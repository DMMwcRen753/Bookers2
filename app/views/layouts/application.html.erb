<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expend-lg navbar-dark bg-dark">
        <div class="contair">
          <a class="navbar-brand" href="/">
            <span>Bookers</span>
          </a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
                <li>
                  <%= link_to "Home", user_path(current_user.id), nav-link text-light %>
                  <i class="fa-duotone fa-house-chimney"></i>
                </li>
                <li>
                  <%= link_to "Users", users_path, nav-link text-light %>
                  <i class="fa-solid fa-users"></i>
                </li>
                <li>
                  <%= link_to "Books", books_path, nav-link text-light %>
                  <i class="fa-solid fa-book-open"></i>
                </li>
                <li>
                  <%= link_to "Log out", destroy_user_session_path, method: :delete, nav-link text-light %>
                  <i class="fa-solid fa-right-from-bracket"></i>
                </li>
              <% else %>
                <li>
                  <%= link_to "Home", user_path(current_user.id), nav-link text-light %>
                  <i class="fa-duotone fa-house-chimney"></i>
                </li>
                <li>
                  <%= link_to "About", about_path, nav-link text-light %>
                  <i class="fa-solid fa-link"></i>
                </li>
                <li>
                  <%= link_to "Sign up", new_user_registration_path, nav-link text-light %>
                  <i class="fa-solid fa-user-plus"></i>
                </li>
                <li>
                  <%= link_to "Log in", new_user_session_path, nav-link text-light %>
                  <i class="fa-solid fa-right-to-bracket"></i>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <footer>
      <div class="contair mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
    <%= yield %>
  </body>
</html>
