<div class="container">
  <div class="row">
    
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr></tr>
          <td>
            <%= link_to books_path(book.id) do %>
              <%= book.title %>
            <% end %>
          </td>
          <td><%= book.body %></td>
          <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
          <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
        </tbody>
      </table>
    </div>
  </div>
</div>
