<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <form enctype="multipart/form-data" action="/users/<%= current_user.id %>" accept-charset="UTF-8" method="post">
      <%= form_with model: @user do |f| %>
        <% if @user.errors.any? %>
          <div id="error-explanation">
            <h3><%= @user.errors.count %> error prohibited this obj from being saved:</h3>
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
          <div class="form-group">
            <div class="field-with-errors">
              <label for="user_name">Name</label>
            </div>
            <div class="field-with-errors">
              <input class="form-control name" type="text" value=" " name="user[name]" id="user_name">
            </div>
          </div>
          <div class="form-group">
            <label for="user_image">Image</label>
            <input class="form-control-file user_image" accept="image/*" type="file" name="user[profile_image]" id="user_profile_image">
          </div>
          <div class="form-group">
            <label for="user_introduction">Introduction</label>
            <textarea class="form-control introduction" value="" name="user[introduction]" id="user_introduction"></textarea>
          </div>
          <div class="form-group">
            <input type="submit" name="commit" value="Update User" class="btn btn-secondary" data-disable-with="Update User">
          </div>
        <% else %>
          <div class="form-group">
            <label for="user_name">Name</label>
            <input class="form-control name" type="text" value="<%= current_user.name %>" name="user[name]" id="user_name">
          </div>
          <div class="form-group">
            <label for="user_image">Image</label>
            <input class="form-control-file user_image" accept="image/*" type="file" name="user[profile_image]" id="user_profile_image">
          </div>
          <div class="form-group">
            <label for="user_introduction">Introduction</label>
            <textarea class="form-control introduction" value="<%= current_user.introduction %>" name="user[introduction]" id="user_introduction"></textarea>
          </div>
          <div class="form-group">
            <input type="submit" name="commit" value="Update User" class="btn btn-secondary" data-disable-with="Update User">
          </div>
        <% end %>
      <% end %>
      </form>
    </div>
  </div>
</div>
