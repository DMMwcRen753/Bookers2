<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'user', user: @user %>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverce">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td><%= image_tag @user.get_profile_image(80,80) %></td>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
          </tr>
        </tbody>
      <% end %>
      </table>
    </div>
  </div>
</div>

